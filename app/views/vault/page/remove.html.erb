<% pages = pluralize(@page.children.count + 1, I18n.t("tog_vault.page.page")) -%>

<h2 id="remove_article">
  <%= I18n.t("tog_vault.page.remove_pages", :pages => pages) %>
</h2>
<p>                               
  <%= I18n.t("tog_vault.page.are_you_sure_remove_pages", :pages => pages.downcase) %>
</p>

<table id="site-map" class="index" cellpadding="0" cellspacing="0" border="0">
  <tbody>
    <%= render_node @page, :simple => true -%>
  </tbody>
</table>

<% form_for :page, :url => "" do |f| %>

  <p class="buttons"><%= submit_tag I18n.t("tog_vault.page.delete_pages_button", :pages => pages) %> or <%= link_to I18n.t("tog_vault.page.cancel"), cms_page_index_url %></p>

<% end %>
