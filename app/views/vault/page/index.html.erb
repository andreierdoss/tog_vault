<% include_javascript "vault/admin" %>
<% include_javascript "vault/ruledtable" %>
<% include_javascript "vault/pagetree" %>
<% include_javascript "vault/string" %>

<h2><%= "Pages"[:pages] %></h2>

<table id="site-map" summary="Page hierarchy of the current site">
  <thead>
    <tr>
      <th scope="col"><%= "Page"[:page] %></th>
      <th scope="col"><%= "Status"[:status] %></th>
      <th scope="col"><%= "Modify"[:modify] %></th>
    </tr>
  </thead>
  <tbody>
<% if @homepage %>
<%= render_node @homepage -%>
<% else -%>
  <tr>
    <td colspan="4" class="note"><%= "No Pages"[:no_pages] %></td>
  </tr>
<% end -%>
  </tbody>
</table>             
<% unless @homepage -%>
    <%= link_to image('new-homepage', :alt => "New Homepage"[:new_homepage]), cms_homepage_new_url %>
<% end -%>
